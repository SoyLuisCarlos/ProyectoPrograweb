@model ProyectoPrograweb.Models.dbModels.NewsCategory

@{
    ViewData["Title"] = "Detalles de categoría";
}

@section Css{
    <link href="~/css/AccessDenied.css" rel="stylesheet" />
    <link href="~/css/Tarjeta.css" rel="stylesheet" />
}


<div>
    <form asp-action="Detalis">
        <div class="central">
            <div class="centro-eliminar">
                <div class="dentro">
                    <h5>@ViewData["Title"]</h5>
                    <hr />
                    <div class="centro">
                        <div class="tarjeta">
                            <h5 class="titulo"></h5>
                            <div class="descripcion">
                                
                            </div>
                        </div>
                    </div>
                    <hr />
                    <p>Título: @Html.DisplayFor(model => model.NewsCategoryDescription)</p>
                    <p>Descripción: @Html.DisplayFor(model => model.IdNewsCategory)</p>
                    <div class="form-group justify-content-between d-sm-inline-flex" id="btn">
                        <div id="btn">
                            <a id="a" asp-action="Index"><i class="fa-solid fa-caret-left"></i> Regresar</a>
                        </div>


                    </div>
                </div>
            </div>
        </div>


        <input type="hidden" asp-for="IdNewsCategory" />

    </form>
</div>
