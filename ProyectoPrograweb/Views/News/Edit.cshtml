@model ProyectoPrograweb.Models.dbModels.News

@{
    ViewData["Title"] = "Editar noticia";
}

@section Css{
    <link href="~/css/Editar.css" rel="stylesheet"/>
}




<div class="centro">
    <h4>@ViewData["Title"]</h4>
    <hr />
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdNews" />
            <div class="form-group">
                <label asp-for="NewsTitle" class="control-label">Título</label>
                <input asp-for="NewsTitle" class="form-control" />
                <span asp-validation-for="NewsTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsDescription" class="control-label">Descripción</label>
                <input asp-for="NewsDescription" class="form-control" />
                <span asp-validation-for="NewsDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsImage" class="control-label">Imagen</label>
                <input asp-for="NewsImage" class="form-control"/>
                <span asp-validation-for="NewsImage" class="text-danger"></span>
            </div>
            <div class="form-group" id="esconder">
                <label asp-for="NewsCreationDate" class="control-label">Fecha de creación</label>
                <input asp-for="NewsCreationDate" class="form-control" />
                <span asp-validation-for="NewsCreationDate" class="text-danger"></span>
            </div>
            <div class="form-group" id="esconder">
                <label asp-for="IdUser" class="control-label">Usuario</label>
                <select asp-for="IdUser" class="form-control" asp-items="ViewBag.IdUser"></select>
                <span asp-validation-for="IdUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNewsCategory" class="control-label">Categoría</label>
                <select asp-for="IdNewsCategory" class="form-control" asp-items="ViewBag.IdNewsCategory"></select>
                <span asp-validation-for="IdNewsCategory" class="text-danger"></span>
            </div>
              <div class="form-group" id="btn">
                <div id="btn">
    <a id="a" asp-action="Index"><i class="fa-solid fa-caret-left"></i> Regresar</a>
</div>
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
