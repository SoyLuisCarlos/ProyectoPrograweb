@model ProyectoPrograweb.Models.dbModels.Match

@{
    ViewData["Title"] = "Detalles de partido";
}

@section Css{
    <link href="~/css/AccessDenied.css" rel="stylesheet" />
    <link href="~/css/Tarjeta.css" rel="stylesheet" />
}

<div>
    <form asp-action="Detalis">
        <div class="central">
            <div class="centro-eliminar">
                <div class="dentro">
                    <h5>@ViewData["Title"]</h5>
                    <hr />
                    <div class="centro">
                        <div class="tarjeta">
                            <h5 class="titulo">@Html.DisplayFor(model => model.MatchTitle)</h5>
                            <div>
                                <img class="imagen" src="@Html.DisplayFor(model => model.MatchImage)" />
                            </div>
                            <div class="descripcion">
                                @Html.DisplayFor(model => model.MatchDescription)
                            </div>
                        </div>
                    </div>
                    <hr />
                    <p>Título: @Html.DisplayFor(model => model.MatchTitle)</p>
                    <p>Descripción: @Html.DisplayFor(model => model.MatchDescription)</p>
                    <p>Link de la imagen: <a class="link-imagen" target="_blank" href="@Html.DisplayFor(model => model.MatchImage)"> Imagen de noticia #@Html.DisplayFor(model => model.IdMatch) </a></p>
                    <div class="form-group justify-content-between d-sm-inline-flex" id="btn">
                        <div id="btn">
                            <a id="a" asp-action="Index"><i class="fa-solid fa-caret-left"></i> Regresar</a>
                        </div>
                      

                    </div>
                </div>
            </div>
        </div>


        <input type="hidden" asp-for="IdMatch" />

    </form>
</div>
