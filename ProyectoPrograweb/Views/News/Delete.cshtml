@model ProyectoPrograweb.Models.dbModels.News

@{
    ViewData["Title"] = "Eliminar noticia";
}

@section Css{
    <link href="~/css/AccessDenied.css" rel="stylesheet"/>
    <link href="~/css/Tarjeta.css" rel="stylesheet"/>
}

<div>
    <form asp-action="Delete">
    <div class="central">
        <div class="centro-eliminar">
            <div class="dentro">
                <h5 class="text-danger">@ViewData["Title"] <i class="fa-solid fa-trash"></i></h5>
                <hr />
                <div class="centro">
                <div class="tarjeta">
                    <h5 class="titulo">@Html.DisplayFor(model => model.NewsTitle)</h5>@Html.DisplayFor(model => model.NewsCreationDate)
                    <div>
                        <img class="imagen" src="@Html.DisplayFor(model => model.NewsImage)" />
                    </div>
                    <div class="descripcion">
                        @Html.DisplayFor(model => model.NewsDescription)
                    </div>
                </div>
                    </div>
                <hr />
                <p>¿Estás seguro que deseas eliminar la noticia "@Html.DisplayFor(model => model.NewsTitle)"?</p>
               
                    
                <div class="form-group justify-content-between d-sm-inline-flex" id="btn">
                    <div id="btn">
                        <a id="a" asp-action="Index"><i class="fa-solid fa-caret-left"></i> Regresar</a>
                    </div>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />

                </div>
            </div>
        </div>
    </div>
    
  
        <input type="hidden" asp-for="IdNews" />
       
    </form>
</div>

