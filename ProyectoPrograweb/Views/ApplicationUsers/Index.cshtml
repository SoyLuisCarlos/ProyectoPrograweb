@model IEnumerable<ProyectoPrograweb.Models.dbModels.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de usuarios</h1>

<table class="table table-success table-striped">
    <thead>
        <tr>
            <th>
                No. usuario
            </th>
            <th>
                Imagen
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Fecha de creación
            </th>
            <th>
                Correo
            </th>
            <th>
                Teléfono
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserImage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserCreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    
                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                
                </td>
            </tr>
        }
    </tbody>
</table>
